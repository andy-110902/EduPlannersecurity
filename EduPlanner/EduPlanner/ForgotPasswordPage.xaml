<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduPlanner.ForgotPasswordPage">
    <ContentPage.Content>
        <Grid>
            <!-- Imagen de fondo -->
            <Image Source="recuperar.png" Aspect="AspectFill" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand"/>

            <!-- Contenido superpuesto -->
            <StackLayout Padding="15" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <!--<Label Text="Olvidaste tu contraseña"
                       FontSize="Large"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>-->
                <Entry Placeholder="Ingresa tu correo"
                       x:Name="TxtEmail"
                       Margin="0,100,0,0"/>
                <Button Text="Enviar correo"
                        x:Name="ButtonSendLink"
                        Clicked="ButtonSendLink_Clicked"
                        Margin="0,50,0,0"
                        TextColor="DodgerBlue"
                        BackgroundColor="White"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
