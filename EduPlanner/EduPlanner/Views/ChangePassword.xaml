<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduPlanner.Views.ChangePassword"
             Title="Cambio de contraseña">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Cambiar contraseña"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                   FontSize="Large"/>
            <Entry Placeholder="Nueva contraseña" x:Name="TxtPassword" IsPassword="True"></Entry>
            <Entry Placeholder="Confirme contraseña" x:Name="TxtConfirm" IsPassword="True"></Entry>
            <Button Text="Guardar cambios" x:Name="BtnChangePassword"
                    Clicked="BtnChangePassword_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>