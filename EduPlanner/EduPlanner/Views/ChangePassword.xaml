<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduPlanner.Views.ChangePassword"
             Title="Cambio de contraseña">
    <ContentPage.Content>
        <Grid>
            <!-- Imagen de fondo -->
            <Image Source="contra.jpg" Aspect="AspectFill" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>

            <!-- Contenido superpuesto -->
            <StackLayout Padding="16" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <!--<Label Text="Cambiar contraseña"
                       VerticalOptions="Center" 
                       HorizontalOptions="Center" 
                       FontSize="Large"/>-->
                <Entry Placeholder="Nueva contraseña" x:Name="TxtPassword" IsPassword="True" Margin="0,260,0,0"/>
                <Entry Placeholder="Confirme contraseña" x:Name="TxtConfirm" IsPassword="True" Margin="0,10,0,0"/>
                <Button Text="Guardar cambios" x:Name="BtnChangePassword"
                        Clicked="BtnChangePassword_Clicked" 
                        TextColor="DodgerBlue"
                        BackgroundColor="White"
                        Margin="0,90,0,0"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
