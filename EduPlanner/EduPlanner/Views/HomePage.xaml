<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduPlanner.Views.HomePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Usuario"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                   FontSize="Large"/>
            <Label Text="" x:Name="LblUser"
                   FontSize="Large"
                   VerticalOptions="Center"></Label>
            <Button Text="Lista de Estudiantes"
                    x:Name="BtnStudentList"
                    Clicked="BtnStudentList_Clicked"></Button>
            <Button Text="Cambiar contraseña" x:Name="BtnChangePassword" Clicked="BtnChangePassword_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>